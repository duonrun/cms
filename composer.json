{
	"name": "duon/cms",
	"description": "Duon content management system and framework",
	"type": "library",
	"license": "MIT",
	"authors": [
		{
			"name": "Ernst",
			"email": "ernst@duon.run"
		}
	],
	"homepage": "https://duon.run/cms",
	"require": {
		"php": "^8.5",
		"ext-pdo": "*",
		"ext-gd": "*",
		"ext-intl": "*",
		"ext-curl": "*",
		"ext-dom": "*",
		"ext-xml": "*",
		"duon/core": "^0.1",
		"duon/error": "^0.1",
		"duon/quma": "^0.1",
		"duon/session": "^0.1",
		"duon/sire": "^0.2",
		"gumlet/php-image-resize": "2.0.*",
		"hidehalo/nanoid-php": "^2",
		"laminas/laminas-httphandlerrunner": "^2.4",
		"psr/http-message-implementation": "^1.0"
	},
	"suggest": {
		"ext-pdo_pgsql": "Required for PostgreSQL database support",
		"ext-pdo_sqlite": "Required for SQLite database support"
	},
	"require-dev": {
		"duon/cms-boiler": "^0.1",
		"duon/dev": "^2.5",
		"laminas/laminas-diactoros": "^3"
	},
	"autoload": {
		"psr-4": {
			"Duon\\Cms\\": "src"
		},
		"files": [
			"src/Util/Functions.php",
			"src/Field/Meta/Functions.php"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"Duon\\Cms\\Tests\\": "tests"
		}
	},
	"scripts": {
		"test": "./vendor/bin/phpunit --testdox --no-coverage --colors=always",
		"mdlint": "markdownlint-cli2 README.md CHANGELOG.md LICENSE.md",
		"coverage": [
			"./vendor/bin/phpunit --testdox --path-coverage --coverage-text --coverage-php=coverage/cover.php --colors=always",
			"./vendor/bin/coverlyzer coverage/cover.php"
		],
		"ci": [
			"composer coverage",
			"composer mdlint"
		]
	}
}
